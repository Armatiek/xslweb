<?xml version="1.0"?>
<webapp 
  xmlns="http://www.armatiek.com/xslweb/webapp"
  xmlns:xs="http://www.w3.org/2001/XMLSchema"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.armatiek.com/xslweb/webapp ../../config/xsd/xslweb/webapp.xsd">
  
  <title>XSLWeb Documentation</title>
  <description>XSLWeb Documentation</description>
  <development-mode>true</development-mode>
  
  <!-- Resources to serve straight away: -->
  <resources>
    <resource pattern="/favicon.ico" media-type="image/x-icon" duration="P7DT0H0M0S"/>    
    <resource pattern="/images/.+\.png" media-type="image/png" duration="P7DT0H0M0S"/>
    <resource pattern="/images/.+\.gif" media-type="image/gif" duration="P7DT0H0M0S"/>
    <resource pattern="/images/.+\.(jpg|jpeg)" media-type="image/jpg" duration="P7DT0H0M0S"/>
    <resource pattern="/scripts/.+\.js" media-type="text/javascript" duration="P7DT0H0M0S"/>
    <resource pattern="/styles/.+\.css" media-type="text/css" duration="P7DT0H0M0S"/>           
  </resources>

  <!-- Stylesheet parameters: -->
  <parameters>
    <parameter name="foo" uri="http://www.x.y" type="xs:string">
      <value>bar</value>
    </parameter>      
  </parameters>
  
  <!-- Scheduled job definitions: -->
  <!--
  <jobs>    
    <job>
      <name></name>
      <uri></uri>
      <cron></cron>      
    </job>  
  </jobs>
  -->
  
</webapp>