<?xml version="1.0"?>
<webapp 
  xmlns="http://www.armatiek.com/xslweb/webapp"
  xmlns:xs="http://www.w3.org/2001/XMLSchema"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.armatiek.com/xslweb/webapp ../../config/xsd/xslweb/webapp.xsd">
  
  <title>XSLWeb examples</title>
  <description>XSLWeb examples</description>
  
  <!-- Resources to serve straight away: -->
  <resources>
    <resource pattern="/favicon.ico" media-type="image/x-icon"/>    
    <resource pattern="/images/.+\.png" media-type="image/png"/>
    <resource pattern="/images/.+\.gif" media-type="image/gif"/>
    <resource pattern="/images/.+\.(jpg|jpeg)" media-type="image/jpg"/>
    <resource pattern="/scripts/.+\.js" media-type="text/javascript"/>
    <resource pattern="/styles/.+\.css" media-type="text/css"/>
    
    <resource pattern="/downloads/.+\.doc" media-type="application/msword"/>    
  </resources>

  <!-- Stylesheet parameters: -->
  <parameters>
    <parameter name="basex-rest-base-uri" uri="http://www.armatiek.com/xslweb/configuration" type="xs:string">
      <value>http://localhost:8984/rest</value>
    </parameter>    
  </parameters>
  
  <!-- Scheduled job definitions: -->
  <jobs>
    <job>
      <name>TestJob</name>
      <uri>http://${xslweb.localhost}:${xslweb.port}/xslweb/examples/hello-world.html</uri>
      <cron>0 11 11 11 11 ?</cron>      
    </job>  
  </jobs>
  
</webapp>